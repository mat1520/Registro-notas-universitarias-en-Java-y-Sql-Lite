<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.universidad.controller.EstudianteController"
      spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="welcomeLabel" style="-fx-font-size: 18px;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Cerrar Sesión" onAction="#handleLogout"/>
    </HBox>

    <ComboBox fx:id="materiaComboBox" promptText="Selecciona materia"/>
    <TableView fx:id="subnotasTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="parcialColumn" text="Parcial"/>
            <TableColumn fx:id="numeroColumn" text="N° Subnota"/>
            <TableColumn fx:id="valorColumn" text="Valor"/>
        </columns>
    </TableView>
    <Label fx:id="totalLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
</VBox> 