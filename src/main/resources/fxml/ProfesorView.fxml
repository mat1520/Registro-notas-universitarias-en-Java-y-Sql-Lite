<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.universidad.controller.ProfesorController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="welcomeLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Cerrar Sesión" onAction="#handleLogout"/>
    </HBox>

    <ComboBox fx:id="cursoComboBox"/>
    <Button text="Actualizar" onAction="#handleActualizarSubnotas"/>
    <Button text="Agregar Subnota" onAction="#handleAgregarSubnota"/>

    <TableView fx:id="subnotasTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nombreColumnSubnotas" text="Nombre"/>
            <TableColumn fx:id="parcialColumnSubnotas" text="Parcial"/>
            <TableColumn fx:id="numeroColumnSubnotas" text="N° Subnota"/>
            <TableColumn fx:id="valorColumnSubnotas" text="Valor"/>
            <TableColumn fx:id="accionesColumnSubnotas" text="Acciones"/>
        </columns>
    </TableView>
</VBox> 